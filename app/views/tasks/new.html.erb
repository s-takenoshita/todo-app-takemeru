<div class="container">
  <h2>new task</h2>

  <%= form_with(model: @task, url: board_tasks_path, method: 'post', local: true) do |f| %>
    <div>
      <%= f.label :title, 'Title' %>
    </div>
    <div>
      <%= f.text_field :title, class: 'text' %>
    </div>
    <div>
      <%= f.label :content, 'Content' %>
    </div>
    <div>
      <%= f.text_area :content, class: 'text' %>
    </div>
    <%= f.submit 'Submit', class: 'btn-primary' %>
  <% end %>
</div>