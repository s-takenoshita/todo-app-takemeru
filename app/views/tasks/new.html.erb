<div class="container">
  <h2>new task</h2>

  <ul>
    <% @task.errors.full_messages.each do |message| %>
      <li>
        <%= message %>
      </li>
    <% end %>
  </ul>

  <%= form_with(model: @task, url: board_tasks_path, method: 'post', local: true) do |f| %>
    <div>
      <%= f.label :eyecatch, 'アイキャッチ' %>
    </div>
    <div>
      <%= f.file_field :eyecatch %>
    </div>
    <div>
      <%= f.label :title, 'Title' %>
    </div>
    <div>
      <%= f.text_field :title, class: 'text' %>
    </div>
    <div>
      <%= f.label :content, 'Content' %>
    </div>
    <div>
      <%= f.text_area :content, class: 'text' %>
    </div>
    <div>
      <%= f.label :deadline, '期限' %>
    </div>
    <div>
      <%= f.date_field :deadline, class: 'text' %>
    </div>
    <%= f.submit 'Submit', class: 'btn-primary' %>
  <% end %>
</div>