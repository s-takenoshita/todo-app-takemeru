<div class="container">

  <div class="board">
    <div class="board_name_title">
      <%= @board.name %>
    </div>
    <div class="board_description">
      <%= @board.description %>
    </div>
    <div class="board_image">
      <div class="board_image_avatar">
        <%= image_tag @board.user.avatar_image %>
      </div>
    </div>
  </div>

  <div class="task_title">
    Tasks
  </div>
  <% @tasks.each do |task| %>
    <%= link_to board_task_path(@board, task) do %>
      <div class="board">
        <% if task.eyecatch.attached? %>
          <div class="board_eyecatch">
            <%= image_tag task.eyecatch %>
          </div>
        <% end %>
        <div class="board_name_title">
          <%= task.title %>
        </div>
        <div class="board_description">
          <%= task.content %>
        </div>
        <div class="board_image">
          <div class="board_image_avatar">
            <%= image_tag task.user.avatar_image %>
          </div>
          <div class="board_image_comments">
            <div class="board_image_comments_count">
              <%= task.comments_count %>
            </div>
            <div class="board_image_comments_img">
              <%= image_tag 'message-square-outline.png'%>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>

  <div class="boards_new">
      <%= link_to '+ Add new task', new_board_task_path(@board) %>
  </div>
</div>