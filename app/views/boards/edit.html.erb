<div class="container">
  <h2>Edit Board</h2>
  <%= form_with(model: @board, url: boards_path, method: 'post', local: true) do |f| %>
    <div>
      <%= f.label :name, 'Name' %>
    </div>
    <div>
      <%= f.text_field :name, class: 'text' %>
    </div>
    <div>
      <%= f.label :description, 'Description' %>
    </div>
    <div>
      <%= f.text_area :description, class: 'text' %>
    </div>
    <%= f.submit 'Submit', class: 'btn-primary' %>
  <% end %>
</div>